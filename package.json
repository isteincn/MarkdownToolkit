{
	"name": "MarkdownToolkit",
	"publisher": "alvinshi",
	"repository": "https://github.com/isteincn/MarkdownToolkit.git",
	"displayName": "MarkdownToolkit",
	"description": "To help users take notes better with docfx and markdown. This extension is forked from [docfx-toc-generator-vscode](https://github.com/AlahmadiQ8/docfx-toc-generator-vscode.git) in Visual Studio Code. ",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.58.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/docfx.json"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "markdown-toolkit.generateYamlToc",
				"title": "Generate YAML Toc"
			}
		],
		"configuration": {
			"title": "DocFxTocGen",
			"properties": {
				"docFxToc.orderBy": {
					"description": "Toc item ordering. Ascending or descending",
					"enum": [
						"ascending",
						"descending"
					],
					"default": "ascending"
				}
			}
		},
		"menus": {
			"explorer/context": [
				{
					"command": "markdown-toolkit.generateYamlToc",
					"group": "docfx",
					"when": "explorerResourceIsFolder == true"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.58.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^10.0.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
